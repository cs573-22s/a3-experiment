<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>

<div class="experiment experiment--2">
    <div class="experiment__viz">
        <p><strong>Experiment 2</strong></p>
        <svg class="svg1" width="450px" height="450px"></svg>

    </div>
    <div class="experiment__qa">
        <form action='/test3' method='POST'>
            <p>What percent is blue bar of red bar?</p>
            <input type='number' name='input1' class="form-control mb-1">
            <p>Question 2</p>
            <input type='number' name='input2' class="form-control mb-1">
            <br>
            <br>
            <input class="btn btn-primary experiment__btn-next" type='submit'>
        </form>
    </div>
</div>


<script defer>
    (() => {
        let dataset =  [23, 44, 36, 69, 52]
        let colors = ["grey", "blue", "grey", "red", "grey"]; // color scheme for bars

        const width = 500;
        const height = 500;

        var svg1 = d3
            .select("svg")
            .attr("viewBox", [0, 0, width, height])
            .property("value", []);

        const linscale = d3
            .scaleLinear()
            .domain([0, 100]) // unit: km
            .range([0, width]); // unit: px

        const yAxisScale = d3
            .scaleLinear()
            .domain([100, 0]) // unit: km
            .range([0, width]); // unit: px


        const axis = d3.axisLeft().scale(yAxisScale).ticks(20);

        // Add Rectangles

        var rect = svg1
            .append("g")
            .selectAll("rect")
            .data(dataset)
            .enter()
            .append("rect")
            .attr("width", 50)
            .attr("height", (data) => linscale(data))
            .attr("stroke", "black")
            // .attr('fill', data => colorScale(data))
            .attr("fill", (d, i) => colors[i])
            .attr("x", function (d, i) {
                return i * 75 + 50;
            })
            .attr("y", (data) => 500 - linscale(data))
            .attr("transform", "translate(75,0)");


        d3.select(".svg1")
            .append("g")
            .attr("transform", "translate(50, 0)")
            .call(axis);


    })();
</script>


</body>
</html>

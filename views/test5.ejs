<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
<style>
    #chartdiv2d {
        width: 100%;
        height: 400px;
    }
</style>
<div class="experiment experiment--5">
    <div class="experiment__viz">
        <p><strong>Experiment 5</strong></p>
        <div id="chartdiv2d"></div>

    </div>
    <div class="experiment__qa">
        <form action='/test6' method='POST'>
            <p>What percent is blue slice of the red slice?</p>
            <input type='number' name='input1' class="form-control mb-1"  required>
            <input id="userTime" type='hidden' name='time' class="form-control mb-1">

            <br>
            <br>
            <input class="btn btn-primary experiment__btn-next" type='submit'>
        </form>
    </div>
</div>
<script defer>

    (() => {
        // Create chart instance
        var chart = am4core.create("chartdiv2d", am4charts.PieChart);

        // Add data
        chart.data = [
            {
                country: "Lithuania",
                litres: 501.9,
                color: am4core.color("#555")
            },
            {
                country: "Czechia",
                litres: 301.9,
                color: am4core.color("#666")
            },
            {
                country: "Ireland",
                litres: 201.1,
                color: am4core.color("red")
            },
            {
                country: "Germany",
                litres: 165.8,
                color: am4core.color("#888")
            },
            {
                country: "Australia",
                litres: 139.9,
                color: am4core.color("#999")
            },
            {
                country: "Austria",
                litres: 128.3,
                color: am4core.color("blue")
            }

        ];

        // Add and configure Series
        var pieSeries = chart.series.push(new am4charts.PieSeries());
        pieSeries.dataFields.value = "litres";
        pieSeries.dataFields.category = "country";
        pieSeries.slices.template.propertyFields.fill = "color";


        // Let's cut a hole in our Pie chart the size of 40% the radius
        // chart.innerRadius = am4core.percent(40);

        // Disable ticks and labels
        pieSeries.labels.template.disabled = true;
        pieSeries.ticks.template.disabled = true;

        // Disable tooltips
        pieSeries.slices.template.tooltipText = "";

        // Add a legend
    })();

</script>
</body>
</html>
